<div id="index">
	<h1>Choisissez le mot à faire deviner</h1>
	
	<ul>
	<% @words.each do |word| %>
		<li> <%= word['prefLabel'] %></li>
	<% end %>
	</ul>
	
	<%= form_tag("/game/game", :method => "get") do %>
	  <%= label_tag(:word, "Mot à faire deviner:") %>
	  <%= text_field_tag(:word) %>
	  <%= submit_tag("envoyer") %>
	<% end %>
</div>
